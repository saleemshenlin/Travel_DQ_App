<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relHomeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    tools:context=".HomeActivity" >

    <RelativeLayout
        android:id="@+id/relUp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#33000000" >

        <TextView
            android:id="@+id/txtHomePlace"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/txtHomePlace"
            android:textColor="#ffffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignBaseline="@+id/txtHomePlace"
            android:layout_alignBottom="@+id/txtHomePlace"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/txtHomePlace"
            android:text="@string/txtHomeTitle"
            android:textColor="#ffffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffeeeeee"
        android:gravity="bottom" >

        <GridLayout
            android:id="@+id/gridHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:columnCount="4"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgItemMap"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_gravity="left|bottom"
                android:layout_row="0"
                android:src="@drawable/ic_itemmap" />

            <ImageView
                android:id="@+id/imgItemScenic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_gravity="left|bottom"
                android:layout_row="0"
                android:src="@drawable/ic_itemscenic" />

            <ImageView
                android:id="@+id/imgItemHotel"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:layout_gravity="right|bottom"
                android:layout_row="0"
                android:src="@drawable/ic_itemhotel" />

            <ImageView
                android:id="@+id/imgItemRest"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:layout_gravity="right|bottom"
                android:layout_row="0"
                android:src="@drawable/ic_itemrest" />

            <ImageView
                android:id="@+id/imgItemFun"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_gravity="left|bottom"
                android:layout_row="1"
                android:src="@drawable/ic_itemfun" />

            <ImageView
                android:id="@+id/imgItemAround"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_gravity="left|bottom"
                android:layout_row="1"
                android:src="@drawable/ic_itemaround" />

            <ImageView
                android:id="@+id/imgItemRoute"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:layout_gravity="right|bottom"
                android:layout_row="1"
                android:src="@drawable/ic_itemroute" />

            <ImageView
                android:id="@+id/imgItemSocial"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:layout_gravity="right|bottom"
                android:layout_row="1"
                android:src="@drawable/ic_itemsocial" />
        </GridLayout>
    </RelativeLayout>

</RelativeLayout>